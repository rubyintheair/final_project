<!DOCTYPE html>
<html>
  <head>
    <title>Version1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <% unless current_user %>
        <div class="navbar-item">
          <%= link_to "Sign up",new_user_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Login",login_path %>
        </div>
      <% else %>
        <div class="navbar-item">
          <%= link_to "Homepage",root_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Logout",logout_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Create Spending Purpose", new_purpose_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Create Cashflow type", new_cashflow_type_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Create a friend's name", new_friend_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "Create a daily cashflow", new_daily_cashflow_path	 %>
        </div>
        <div class="navbar-item">
          <%= link_to "General Report", daily_cashflows_path %>
        </div>
        <div class="navbar-item">
          <%= link_to "......", banks_display_path %>
        </div>
      <% end %>
    </div>
    <div class="container">
      <%= flash_messages %>
      <%= yield %>
    </div>
  </body>
  <%= current_user.id %>
</html>
