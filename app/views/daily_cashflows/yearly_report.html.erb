
<div class="monthly-report report">
  <div class="title", style="text-align: center">
    Report for <%= @last_year %>
  </div>
  <div class="columns">
    <div class="column">
      <%= render "pie_chart", chart:  @last_year_cashflows_vnd.group(:cashflow_type).sum(:amount), title: "Income VS Expense by year" %>
    </div>
    <div class="column">
      <%= render "pie_chart", chart:  @last_year_vnd_income_purpose, title: "Income by purpose" %>
    </div>
    <div class="column">
      <%= render "pie_chart", chart:  @last_year_vnd_outcome_purpose, title: "Expense by purpose" %>
    </div>
  </div>

  <div class="columns">
    <div class="column">
      <%= render "line_chart", chart: @last_year_cashflows_vnd.where(cashflow_type: "Income").group_by_month(:occur_at).sum(:amount), title: "Sum income by month" %>
    </div>
    <div class="column ">
      <%= render "line_chart", chart: @last_year_cashflows_vnd.where(cashflow_type: "Expense").group_by_month(:occur_at).sum(:amount), title: "Sum expense by month" %>
    </div>
  </div>

  <%= render "display_by_attribute", cashflows: @last_year_cashflows %>
  
</div>