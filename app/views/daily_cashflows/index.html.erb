      <%= date_field_tag(:end_date, nil, placeholder: "End date", class: "input") %>
    </div>
    <div class="field">
      <label>Purpose</label>
      <%= select_tag "purposes_id", 
          options_from_collection_for_select(Purpose.all, "id", "purpose_name", class: "input"), include_blank:"" %>
