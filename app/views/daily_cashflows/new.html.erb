<h1>DailyCashflows#new</h1>
<p>Find me in app/views/daily_cashflows/new.html.erb</p>
<p>So luong Cashflow_types <%= CashflowType.all.count  %></p>

<%= form_for @daily_cash_flow do |f| %>
  <div>
    <%= f.number_field :amount, placeholder: "Amount" %>
  </div>
  <div>
    <%= f.datetime_field :occur_at  %>
  </div>
  <div>
    <%= f.text_area :content, placeholder: "Content" %>
  </div>
  <div>
    <label class="label">Cashflow type: </label>
    <%= select_tag "cashflow_types_id", options_from_collection_for_select(CashflowType.all, "id", "trend") %>
  </div>
  <div>
    <% if CashflowType.find_by(id: 2) %>
      <label class="label">Spending purpose: </label>
      <%= select_tag "purposes_id", options_from_collection_for_select(Purpose.all[1..10], "id", "purpose_name") %>
    <% end %>
  </div>
  <%= f.submit "Create new cashflow nhaz" %>
<% end %>
