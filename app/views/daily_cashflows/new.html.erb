<h1>DailyCashflows#new</h1>
<p>Find me in app/views/daily_cashflows/new.html.erb</p>
<p>So luong Cashflow_types <%= @cashflow_types.count %></p>

<%= form_for @daily_cash_flow do |f| %>
  <div>
    <%= f.number_field :amount, placeholder: "Amount" %>
  </div>
  <div>
    <%= f.datetime_field :occur_at %>
  </div>
  <div>
    <%= f.text_area :content, placeholder: "Content" %>
  </div>
  <div>
    <label class="label">Friend name: </label>
    <%= select_tag "friends", options_from_collection_for_select(@friends, "id", "name") %>
  </div>
  <div>
    <label class="label">Cashflow type: </label>
    <%= select_tag "cashflow_types", options_from_collection_for_select(@cashflow_types, "id", "trend") %>
  </div>
  <div>
    <label class="label">Spending purpose: </label>
    <%= select_tag "purposes", options_from_collection_for_select(@purposes, "id", "purpose_name") %>
  </div>
  <%= f.submit "Create new cashflow nhaz" %>
<% end %>
